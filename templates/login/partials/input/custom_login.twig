{% block customlogin %}
 {% if enable_location_login %}
    <div class="{{ custom_login_class_list|default(['form-group', 'row'])|join(' ') }}">
        <label for="language" class="{{ srOnly }} {{ language_label_class_list|default(['col-form-label', 'col-sm-4'])|join(' ') }}">{{ "Location"|xlt }}</label>
        <div class="col">
            <select class="{{ language_select_class_list|default(['form-control'])|join(' ') }}" name="facility_location" size="1">
                
                {% for l in location_facilities %}
                    <option value="{{ l.id|attr }}">{{ l.name|text }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
  {% endif %}   
    <div class="row">
        {% if enable_keepmesign %}
            <div class="col-6">
                <input type="checkbox" name="rememberme"/> Keep me Signed in
            </div>
        {% endif %}  
        {% if enable_forgetpassword %}  
        <div class="col-6" style="display: flex;justify-content: right;">
            <a href="../customized/verify_login.php">Forgot password?</a>
        </div> 
        {% endif %} 
    </div>
{% endblock %}
